<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:alpha="0.2"
        android:background="@drawable/ic_baseline_music_note_24"
        android:backgroundTint="#7BACD3" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:background="@drawable/notification_btn_ripple_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Music Player"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/close_notification_btn_notif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_baseline_close_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/notification_title"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/song_title_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/artist_title_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/previous_btn_notif"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/notification_btn_ripple_background"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_skip_previous_24" />

        <ImageButton
            android:id="@+id/play_pause_btn_notif"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/notification_btn_ripple_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_outline_pause_circle_24" />

        <ImageButton
            android:id="@+id/next_btn_notif"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/notification_btn_ripple_background"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_skip_next_24" />


    </LinearLayout>


</RelativeLayout>